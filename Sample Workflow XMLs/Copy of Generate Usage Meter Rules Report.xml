    if(productListArray[i].productType == "VCD"){&#13;
        vcdProductId = productListArray[i];&#13;
        _bool = true;&#13;
    }&#13;
}&#13;
if(_bool) &#13;
    System.log("VCD Product found in UM configuration"); &#13;
else&#13;
    throw("VCD product not found in product list. Please check Usage Meter configuration");&#13;
&#13;
&#13;
//arrayRuleName =&gt; contains list of all orgs names without location&#13;
arrayRuleName= [];&#13;
var orgs = System.getModule("org.telus.vCloud").getvCloudHost().getOrganizations();&#13;
for (var index in orgs) {&#13;
    arrayRuleName.push(orgs[index].name.split("-")[0]);&#13;
}&#13;
&#13;
</script>
