    <workflow-item name="item11" out-name="item0" type="task" comparator="0">
        <display-name>Scriptable task</display-name>
        <script encoded="false">var _array = [];&#13;
for (var i in customerRuleArray){&#13;
    var _rules = customerRuleArray[i];&#13;
    _rules = JSON.parse(_rules);&#13;
        for (var j in _rules){&#13;
            _array.push(_rules[j].ruleName);&#13;
        }&#13;
    &#13;
}&#13;
System.log(_array);&#13;
var matchedOrgRuleArray = [];&#13;
for (var k in rules){&#13;
    for (var j in _array){&#13;
    if(rules[k].name == _array[j])&#13;
        matchedOrgRuleArray.push(_array[j]);&#13;
    }&#13;
}&#13;
&#13;
System.log("Kudos! Rules exist for following organizations: "+matchedOrgRuleArray);&#13;
&#13;
var message = new EmailMessage();&#13;
message.toAddress = DEVOPS_MAIL_LIST;&#13;
message.subject = "Usage Meter Rules Report";&#13;
message.addMimePart("Kudos! Rules exist for following organizations: "+matchedOrgRuleArray+" in "+UM_HOST.url, "text/plain; charset=UTF-8");&#13;
message.sendMessage();&#13;
&#13;
</script>
